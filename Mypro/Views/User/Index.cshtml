        </style>

        <script>
            /*
             * SMART SEARCH BAR FUNCTIONALITY
             * Features:
             * - Real-time autocomplete
             * - Keyboard navigation (Arrow keys, Enter, Escape)
             * - Click outside to close
             * - Debounced search (performance optimization)
             * - Regex-safe highlighting
             */

            (function() {
                'use strict';

                // ===================================
                // SEARCH DATA CONFIGURATION
                // ===================================
                const searchData = [
                    // Main Categories
                    { name: 'Dupatta', category: 'Category', icon: 'bi-bag-fill', url: '@Url.Action("Details", "Category", new { name = "Dupatta" })' },
                    { name: 'Embrodari & Handwork', category: 'Category', icon: 'bi-scissors', url: '@Url.Action("Details", "Category", new { name = "Embrodari & Handwork" })' },

                    // Print Fabrics
                    { name: 'Cotton Print', category: 'Print Fabric', icon: 'bi-palette-fill', url: '@Url.Action("Details", "Category", new { name = "Cotton Print" })' },
                    { name: 'Mal Cotton Print', category: 'Print Fabric', icon: 'bi-palette-fill', url: '@Url.Action("Details", "Category", new { name = "Mal Cotton Print" })' },
                    { name: 'Chikan Print', category: 'Print Fabric', icon: 'bi-palette-fill', url: '@Url.Action("Details", "Category", new { name = "Chikan Print" })' },
                    { name: 'Linan Print', category: 'Print Fabric', icon: 'bi-palette-fill', url: '@Url.Action("Details", "Category", new { name = "Linan" })' },
                    { name: 'Ikkat Print', category: 'Print Fabric', icon: 'bi-palette-fill', url: '@Url.Action("Details", "Category", new { name = "Iikkat" })' },
                    { name: 'Silk & Maslin Print', category: 'Print Fabric', icon: 'bi-palette-fill', url: '@Url.Action("Details", "Category", new { name = "Silk & Maslin Print" })' },
                    { name: 'Gamthi Print', category: 'Print Fabric', icon: 'bi-palette-fill', url: '@Url.Action("Details", "Category", new { name = "Gamthi Print" })' },

                    // Plain Fabrics
                    { name: 'Zara Cotton Plain', category: 'Plain Fabric', icon: 'bi-square-fill', url: '@Url.Action("Details", "Category", new { name = "Zara Cotton Plain" })' },
                    { name: 'Khadi Cotton Plain', category: 'Plain Fabric', icon: 'bi-square-fill', url: '@Url.Action("Details", "Category", new { name = "Khadi Cotton Plain" })' },
                    { name: 'Jam Cotton Plain', category: 'Plain Fabric', icon: 'bi-square-fill', url: '@Url.Action("Details", "Category", new { name = "Jam Cotton Plain" })' },
                    { name: 'Mal Cotton Plain', category: 'Plain Fabric', icon: 'bi-square-fill', url: '@Url.Action("Details", "Category", new { name = "Mal Cotton Plain" })' },

                    // Material Types
                    { name: 'Cotton Fabrics', category: 'Material', icon: 'bi-tag-fill', url: '#menu' },
                    { name: 'Silk Fabrics', category: 'Material', icon: 'bi-tag-fill', url: '#menu' },
                    { name: 'Maslin Material', category: 'Material', icon: 'bi-tag-fill', url: '#menu' },
                    { name: 'Khadi Material', category: 'Material', icon: 'bi-tag-fill', url: '#menu' },

                    // Collections
                    { name: 'Wedding Collection', category: 'Collection', icon: 'bi-star-fill', url: '#menu' },
                    { name: 'Casual Wear', category: 'Collection', icon: 'bi-star-fill', url: '#menu' },
                    { name: 'Traditional Designs', category: 'Collection', icon: 'bi-star-fill', url: '#menu' },
                    { name: 'Festive Collection', category: 'Collection', icon: 'bi-star-fill', url: '#menu' },

                    // Quick Links
                    { name: 'View Gallery', category: 'Quick Link', icon: 'bi-images', url: '#gallery' },
                    { name: 'Contact Us', category: 'Quick Link', icon: 'bi-telephone-fill', url: '#contact' },
                    { name: 'About Us', category: 'Quick Link', icon: 'bi-info-circle-fill', url: '#about' },
                    { name: 'Our Owners', category: 'Quick Link', icon: 'bi-people-fill', url: '#owner' }
                ];

                // ===================================
                // DOM ELEMENTS
                // ===================================
                const searchInput = document.getElementById('smartSearchInput');
                const suggestionsBox = document.getElementById('searchSuggestions');
                const suggestionsList = document.getElementById('suggestionsList');
                const noResults = document.getElementById('noResults');
                const clearBtn = document.getElementById('clearSearch');
                const searchContainer = document.querySelector('.search-container');

                // Check if elements exist
                if (!searchInput || !suggestionsBox || !suggestionsList || !noResults || !clearBtn || !searchContainer) {
                    console.error('Smart Search: Required DOM elements not found');
                    return;
                }

                // ===================================
                // STATE MANAGEMENT
                // ===================================
                let selectedIndex = -1;
                let searchTimeout = null;

                // ===================================
                // EVENT LISTENERS
                // ===================================

                // Input event - show/hide clear button and perform search
                searchInput.addEventListener('input', function() {
                    clearBtn.style.display = this.value ? 'block' : 'none';
                    performSearch(this.value);
                });

                // Clear button click
                clearBtn.addEventListener('click', function() {
                    searchInput.value = '';
                    clearBtn.style.display = 'none';
                    suggestionsBox.style.display = 'none';
                    searchInput.focus();
                });

                // Focus event - show suggestions if input has value
                searchInput.addEventListener('focus', function() {
                    if (this.value.length > 0) {
                        performSearch(this.value);
                    }
                });

                // Click outside to close
                document.addEventListener('click', function(e) {
                    if (!e.target.closest('.search-wrapper')) {
                        suggestionsBox.style.display = 'none';
                        selectedIndex = -1;
                    }
                });

                // Keyboard navigation
                searchInput.addEventListener('keydown', function(e) {
                    const items = suggestionsList.querySelectorAll('.suggestion-item');
                    if (items.length === 0) return;

                    switch(e.key) {
                        case 'ArrowDown':
                            e.preventDefault();
                            selectedIndex = (selectedIndex + 1) % items.length;
                            updateSelection(items);
                            break;

                        case 'ArrowUp':
                            e.preventDefault();
                            selectedIndex = selectedIndex <= 0 ? items.length - 1 : selectedIndex - 1;
                            updateSelection(items);
                            break;

                        case 'Enter':
                            e.preventDefault();
                            if (selectedIndex >= 0 && items[selectedIndex]) {
                                items[selectedIndex].click();
                            }
                            break;

                        case 'Escape':
                            suggestionsBox.style.display = 'none';
                            selectedIndex = -1;
                            break;
                    }
                });

                // ===================================
                // CORE FUNCTIONS
                // ===================================

                /**
                 * Perform search with debouncing (150ms delay)
                
                 */
                function performSearch(query) {
                    clearTimeout(searchTimeout);

                    if (query.length < 1) {
                        suggestionsBox.style.display = 'none';
                        return;
                    }

                    // Debounce to avoid excessive filtering
                    searchTimeout = setTimeout(() => {
                        const filtered = searchData.filter(item =>
                            item.name.toLowerCase().includes(query.toLowerCase()) ||
                            item.category.toLowerCase().includes(query.toLowerCase())
                        );

                        if (filtered.length > 0) {
                            displaySuggestions(filtered, query);
                            noResults.style.display = 'none';
                        } else {
                            suggestionsList.innerHTML = '';
                            noResults.style.display = 'block';
                        }

                        suggestionsBox.style.display = 'block';
                        selectedIndex = -1;
                    }, 150);
                }

                /**
                 * Display search suggestions
                
                 */
                function displaySuggestions(items, query) {
                    suggestionsList.innerHTML = '';

                    // Show maximum 10 results
                    items.slice(0, 10).forEach((item, index) => {
                        const li = document.createElement('li');
                        li.className = 'suggestion-item';
                        li.setAttribute('data-index', index);
                        li.setAttribute('role', 'option');
                        li.innerHTML = `
                            <i class="${item.icon} suggestion-icon"></i>
                            <span class="suggestion-text">${highlightMatch(item.name, query)}</span>
                            <span class="suggestion-category">${item.category}</span>
                        `;

                        li.addEventListener('click', function() {
                            navigateToUrl(item.url, item.name);
                        });

                        suggestionsList.appendChild(li);
                    });
                }

                /**
                 * Highlight matching text in search results
               
                 */
                function highlightMatch(text, query) {
                    if (!query) return text;
                    const regex = new RegExp(`(${escapeRegex(query)})`, 'gi');
                    return text.replace(regex, '<strong>$1</strong>');
                }

                /**
                 * Escape special regex characters
               
                 */
                function escapeRegex(string) {
                    return string.replace(/[.*+?^${}()|[\]\\]/g, '\\$&');
                }

                /**
                 * Navigate to selected URL
                
                 */
                function navigateToUrl(url, name) {
                    searchInput.value = name;
                    suggestionsBox.style.display = 'none';
                    window.location.href = url;
                }

                /**
                 * Update selected item in dropdown
              
                 */
                function updateSelection(items) {
                    items.forEach((item, index) => {
                        if (index === selectedIndex) {
                            item.classList.add('selected');
                            item.scrollIntoView({ block: 'nearest', behavior: 'smooth' });
                        } else {
                            item.classList.remove('selected');
                        }
                    });
                }

            })();
        </script>
    }
