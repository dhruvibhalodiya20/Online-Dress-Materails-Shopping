@{
    ViewData["Title"] = "Upload Profile Photo";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<style>
    .upload-container {
        display: flex;
        justify-content: center;
        align-items: center;
        min-height: 80vh;
        background: linear-gradient(135deg, #f0f0f0, #dcdcdc);
    }

    .upload-card {
        backdrop-filter: blur(12px);
        background: rgba(255, 255, 255, 0.2);
        border-radius: 20px;
        box-shadow: 0 8px 25px rgba(0, 0, 0, 0.2);
        padding: 40px;
        width: 400px;
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

        .upload-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 12px 35px rgba(0, 0, 0, 0.3);
        }

        .upload-card h2 {
            text-align: center;
            font-weight: 700;
            margin-bottom: 25px;
            background: linear-gradient(45deg, #6a11cb, #2575fc);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
        }

    .custom-file-label {
        background: linear-gradient(135deg, #e0e0e0, #f5f5f5);
        border: 2px dashed #6a11cb;
        padding: 12px;
        border-radius: 12px;
        text-align: center;
        font-weight: 600;
        color: #6a11cb;
        cursor: pointer;
        transition: 0.3s ease;
    }

        .custom-file-label:hover {
            background: linear-gradient(135deg, #d0d0d0, #e8e8e8);
        }

    .btn-upload {
        background: linear-gradient(45deg, #6a11cb, #2575fc);
        color: white;
        border: none;
        padding: 10px 30px;
        border-radius: 30px;
        transition: all 0.3s ease;
    }

        .btn-upload:hover {
            background: linear-gradient(45deg, #2575fc, #6a11cb);
            transform: scale(1.05);
        }

    .btn-cancel {
        background: transparent;
        border: 2px solid #6a11cb;
        color: #6a11cb;
        padding: 10px 28px;
        border-radius: 30px;
        margin-left: 10px;
        transition: all 0.3s ease;
    }

        .btn-cancel:hover {
            background: #6a11cb;
            color: white;
        }
</style>

<div class="upload-container">
    <div class="upload-card">
        <h2>Upload Profile Photo</h2>
        <form asp-action="UploadProfilePhoto" asp-controller="Account" enctype="multipart/form-data" method="post">
            <div class="form-group mb-4">
                <label class="custom-file-label" for="Photo">
                    Click here to select a photo
                </label>
                <input type="file" class="form-control d-none" id="Photo" name="Photo" accept="image/*" required />
            </div>

            <div class="d-flex justify-content-center mt-3">
                <button type="submit" class="btn-upload">Upload</button>
                <a asp-action="AdminDashboard" class="btn-cancel">Cancel</a>
            </div>
        </form>
    </div>
</div>


<script>
    // Show file name dynamically
    document.getElementById("Photo").addEventListener("change", function () {
        if (this.files.length > 0) {
            document.querySelector(".custom-file-label").textContent = this.files[0].name;
        }
    });
</script>
