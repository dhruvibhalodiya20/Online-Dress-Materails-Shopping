@model List<Mypro.Models.CategoryImage>
@{
    ViewBag.Title = "Pricing";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<br />
<br />
<a href="javascript:history.back()" class="btn btn-light mb-3" style="font-size:20px; font-weight:bold;">←</a>

<h2>Category Images & Prices</h2>

<!-- Category Dropdown -->
<form method="get" asp-action="Pricing" class="mb-3">
    <label>Select Category:</label>
    <select name="categoryId" class="form-select" style="width:200px; display:inline-block; margin-left:10px;"
            asp-items="ViewBag.Categories">
        <option value="">-- All Categories --</option>
    </select>
    <button type="submit" class="btn btn-primary btn-sm" >Search</button>
    <a asp-action="Pricing" class="btn btn-secondary">Reset</a>
</form>

<style>
    h2 {
        color: black;
    }

    body.theme-dark h2 {
        color: white !important;
    }
</style>

<!-- Images Table -->
<table class="table table-bordered">
    <thead>
        <tr>
            <th>Category</th>
            <th>Image</th>
            <th>Price</th>
            <th>Update Price</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Category?.CategoryName</td>
                <td style="text-align:center;">
                    <img src="@Url.Content(item.ImagePath)" alt="Image"
                         style="width:100px; height:100px; object-fit:cover; display:block; margin:0 auto;" />
                </td>
                <td>@item.Price.ToString("C")</td>
                <td>
                    <form asp-action="UpdatePrice" method="post">
                        <input type="hidden" name="imageId" value="@item.ImageId" />
                        <input type="number" step="0.01" name="price" value="@item.Price"
                               class="form-control" style="width:100px; display:inline;" />
                        <button type="submit" class="btn btn-primary btn-sm">Update</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
