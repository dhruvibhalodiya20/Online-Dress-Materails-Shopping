<style>
    :root {
        --card-bg-light: #ffffff;
        --card-bg-dark: #1e1e1e;
        --text-light: #333;
        --text-dark: #f5f5f5;
        --icon-light: #0d6efd;
        --icon-dark: #4dabf7;
    }

    .stat-card {
        background: var(--card-bg-light);
        color: var(--text-light);
        transition: all 0.3s ease;
        border: none;
        width: 300px; 
        height: 200px;
    }

    .stat-icon {
        font-size: 3rem;
        color: var(--icon-light);
    }

    /* Dark mode support */
    media (prefers-color-scheme: dark) {
        .stat-card

    {
        background: var(--card-bg-dark);
        color: var(--text-dark);
    }

    .stat-icon {
        color: var(--icon-dark);
    }

    }

    .stat-card:hover {
        transform: translateY(-5px) scale(1.02);
        box-shadow: 0 10px 20px rgba(0, 0, 0, 0.15);
    }

    

    }
</style>
